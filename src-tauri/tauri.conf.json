{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "MPIDC Invoice System",
  "version": "0.1.0",
  "identifier": "com.mpidc.invoice",
  "build": {
    "beforeDevCommand": "vite",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "vite build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "MPIDC Invoice System",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self' https://mpidc-invoice-system.vercel.app; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' https: data:; font-src 'self' data:; connect-src 'self' https://mpidc-invoice-system.vercel.app https://www.google.com https://www.cloudflare.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "MPIDC Invoice Management System",
    "longDescription": "Desktop application for MPIDC Invoice Management System with automatic internet connectivity checking.",
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["en-US"]
      }
    }
  }
}